{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master"],
      "message": "chore(release): Publish"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock",
        "--no-ci"
      ]
    }
  },
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true
}
