{
  "name": "zarm-design",
  "engines": {
    "node": ">=12.13.0"
  },
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean -y",
    "lint:js": "eslint --ext .ts,.tsx,.js,.jsx packages",
    "lint:style": "stylelint \"packages/**/*.scss\" --syntax scss",
    "lint": "npm run lint:js",
    "lint:fix": "npm run lint:js -- --fix",
    "build": "lerna run build",
    "test": "lerna run test",
    "dev": "lerna run dev",
    "release": "yarn run build && lerna publish --exact --conventional-commits"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-eslint": "10.1.0",
    "eslint": "7.10.0",
    "eslint-config-za": "2.2.2",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.1.2",
    "eslint-plugin-vue": "7.1.0",
    "husky": "^4.0.10",
    "jest": "^26.6.3",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.0",
    "lint-staged": "^10.0.1",
    "stylelint": "13.8.0",
    "stylelint-checkstyle-formatter": "0.1.2",
    "stylelint-config-za": "0.1.0",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
